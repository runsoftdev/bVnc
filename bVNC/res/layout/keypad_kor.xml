<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/keypadMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:id="@+id/numberRow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/key_hangul_height"
            android:orientation="horizontal"
            android:weightSum="100" >

            <Button
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="1" 
                android:tag="1">
            </Button>
            <Button
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="2"
                android:tag="2" >
            </Button>
            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="3"
                android:tag="3" >
            </Button>
            <Button
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="4" 
                android:tag="4">
            </Button>
            <Button
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="5"
                android:tag="5" >
            </Button>
            <Button
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="6" 
                android:tag="6">
            </Button>
            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="7"
                android:tag="7" >
            </Button>
            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="8" 
                android:tag="8">
            </Button>
            <Button
                android:id="@+id/num9"
