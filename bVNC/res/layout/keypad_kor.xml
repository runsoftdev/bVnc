                android:layout_weight="10"
                android:text="ㅛ" 
                android:tag="y">
            </Button>
            <Button
                android:id="@+id/key_u"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="ㅕ"
                android:tag="u" >
            </Button>
            <Button
                android:id="@+id/key_i"
