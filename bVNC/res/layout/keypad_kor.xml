            </Button>            
        </TableRow>
        <TableRow
            android:id="@+id/hangulLine3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/key_hangul_height"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100" >
            <Button
                android:id="@+id/key_shift"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="Shift(off)"
                android:tag="1" >
            </Button>

            <Button
                android:id="@+id/key_z"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="ㅋ"
                android:tag="z" >
            </Button>
            <Button
                android:id="@+id/key_x"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="ㅌ"
                android:tag="x" >
            </Button>
            <Button
                android:id="@+id/key_c"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="ㅊ"
                android:tag="c" >
