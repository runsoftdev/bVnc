                android:tag="r">
            </Button>
            <Button
                android:id="@+id/key_t"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="ㅅ"
                android:tag="t" >
            </Button>
            <Button
                android:id="@+id/key_y"
