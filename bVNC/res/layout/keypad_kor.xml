        <TableRow
            android:id="@+id/hangulLine4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/key_hangul_height"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100" >
            <Button
                android:id="@+id/key_esc"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="8"
                android:text="Esc"
                android:tag="0xff1b" >
            </Button>
            <Button
                android:id="@+id/key_show_eng"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="영문키보드"
                android:tag="0xff1b" >
            </Button>
            <Button
                android:id="@+id/key_hide"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="숨기기"
                android:tag="," >
            </Button>
            <Button
                android:id="@+id/key_dot"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="5"
                android:text="."
                android:tag="." >
            </Button>
            
            <Button
                android:id="@+id/key_space"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="50"
                android:text="Space"
                android:tag="" >
            </Button>
            
            <Button
                android:id="@+id/key_swap"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="8"
                android:text="한/영" 
                android:tag="0xff31">
            </Button>
            <Button
                android:id="@+id/key_enter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="8"
