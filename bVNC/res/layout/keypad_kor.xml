                android:tag="o">
            </Button>
            <Button
                android:id="@+id/key_p"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="ㅔ"
                android:tag="p" >
            </Button>
            
        </TableRow>
        <TableRow
            android:id="@+id/hangulLine2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/key_hangul_height"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100" >

            <Button
                android:id="@+id/key_a"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_hangul_height"
                android:layout_weight="10"
                android:text="ㅁ"
                android:tag="a" >
            </Button>
            <Button
                android:id="@+id/key_s"
