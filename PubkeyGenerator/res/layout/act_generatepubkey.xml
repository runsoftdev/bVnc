<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:scrollbars="vertical"
	android:layout_width="fill_parent">

	<TableLayout
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:scrollbars="vertical"
		android:layout_width="fill_parent">

	    <Button
		    android:id="@+id/generate"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:enabled="true"
		    android:text="@string/pubkey_generate" />
		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/importKey"
			android:text="@string/pubkey_import"
			android:enabled="true" />
		<Button
		    android:id="@+id/decrypt"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:enabled="false"
		    android:text="@string/pubkey_decrypt" />	
		<TextView
			android:text="@string/prompt_password_can_be_blank"
			android:gravity="left"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
		<EditText
			android:id="@+id/password"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:password="true"
			android:inputType="textPassword"
			android:singleLine="true"
			android:layout_weight="1"
			android:hint="@string/prompt_passphrase" />
		<TableRow>
			<TextView
				android:text="@string/prompt_type"
				android:paddingRight="10dip"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:gravity="left"
				android:layout_gravity="center_vertical" />

			<RadioGroup
				android:id="@+id/key_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:checkedButton="@+id/rsa">

				<RadioButton
					android:id="@+id/rsa"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="RSA"
					android:paddingRight="30dip" />

				<RadioButton
					android:id="@+id/dsa"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="DSA" />
			</RadioGroup>
		</TableRow>

		<TableRow>
			<TextView
				android:text="@string/prompt_bits"
				android:paddingRight="10dip"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:gravity="left" />

			<EditText
				android:id="@+id/bits"
				android:inputType="number"
				android:layout_height="wrap_content"
				android:text="2048"
				android:singleLine="true"
				android:layout_weight="1" />
		</TableRow>

		<SeekBar
			android:layout_height="wrap_content"
			android:id="@+id/bits_slider"
			android:layout_width="fill_parent"
			android:paddingBottom="10dip"
			android:max="3328"
			android:progress="1280" />

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/share"
			android:text="@string/pubkey_share"
			android:enabled="false" />
		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/copy"
			android:text="@string/pubkey_copy"
			android:enabled="false" />
	    <Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/save"
			android:text="@string/pubkey_save"
			android:enabled="false" />
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:text="@string/prompt_file_will_be_saved" />
		<EditText
			android:id="@+id/file_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:singleLine="true"
			android:layout_weight="1"
			android:hint="@string/prompt_file_name" />
	</TableLayout>
</ScrollView>
